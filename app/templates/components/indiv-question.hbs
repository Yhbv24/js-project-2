<div class="question_tile">
  <div class="panel panel-primary">
    <div class="panel-heading">
      {{question.title}}
    </div>
    <div class="panel-body">
        {{question.body}}
    </div>
    <div class="panel-footer">
      Posted by: {{question.author}}
      <button {{action "delete" question}} class="btn btn-sm">Delete</button>

      {{#if isShowing}}
        <div class="edit_question_form">
          <form>
            <div class="form-group">
              <label for="title">Title:</label>
              {{input value=title type="text" class="form-control" placeholder=""}}
            </div>

            <div class="form-group">
              <label for="body">Body:</label>
              {{input value=body type="text" class="form-control" placeholder=""}}
            </div>

            <div class="form-group">
              <label for="author">Title:</label>
              {{input value=author type="text" class="form-control" placeholder=""}}
            </div>

            <div class="center">
              <button {{action "edit" question}} class="btn btn-sm">Submit</button> <button {{action "hideEditForm"}} class="btn btn-sm">Close</button>
            </div>
          </form>
        </div>
      {{else}}
        <button {{action "showEditForm"}} class="btn btn-sm">Edit</button>
      {{/if}}

    </div>
  </div>
</div>
